<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>	
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>RunMigration.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/ECBDataMigration</directory>
			<outputDirectory>ECBDataMigration</outputDirectory>
			<includes>
				<include>*/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>TransformationTools</outputDirectory>
			<includes>
				<include>RunTransformationTools.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/docs</directory>
			<outputDirectory>TransformationTools</outputDirectory>
			<includes>
				<include>MigrationToolsReadMe.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>TransformationTools</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/softs</directory>
			<outputDirectory>TransformationTools</outputDirectory>
			<includes>
				<include>apache-activemq-5.15.0/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/input</directory>
			<outputDirectory>TransformationTools/input</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/output</directory>
			<outputDirectory>TransformationTools/</outputDirectory>
			<excludes>
				<exclude>*/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/scripts</directory>
			<outputDirectory>TransformationTools/output</outputDirectory>
			<includes>
				<include>DeployOutputFile.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/reports</directory>
			<outputDirectory>TransformationTools/reports</outputDirectory>
			<includes>
				<include>functional</include>
				<include>technical</include>
				<include>template/**</include>
				<include>transformation</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>